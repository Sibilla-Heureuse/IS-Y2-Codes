package Sibilla.assignment;

public class TrianglePattern {
    public static void main(String[] args){
        for( int i = 1; i<=7; i++ ){
        for ( int j = 7; j>0; j--){
            System.out.println(" ");
        }
         for (int k = 1; k <= i; k++ ){
         System.out.println(k);
         }

        }
    }
}
